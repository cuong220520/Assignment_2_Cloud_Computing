<h2 class="page-header">Search Product</h2>
<div>
<form action="/products" method="GET">
    <div class="form-row">
        <div class="form-item">
            <label>Name</label>
            <input type="text" name="name" value="<%= searchOptions.name %>">
        </div>
        <div class="form-item">
            <label>Brand</label>
            <input type="text" name="brand" value="<%= searchOptions.brand %>">
        </div>
    </div>
    <div class="form-row form-row-end">
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>
</div>

