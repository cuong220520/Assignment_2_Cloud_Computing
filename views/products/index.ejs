<h2 class="page-header">Search Product</h2>
<div>
<form action="/products" method="GET">
    <div>
        <label>Name</label>
        <input type="text" name="name" value="<%= searchOptions.name %>">
    </div>
    <div>
        <label>Brand</label>
        <input type="text" name="brand" value="<%= searchOptions.brand %>">
    </div>
    <button class="btn btn-primary" type="submit">Search</button>
</form>
</div>

<div>
    <% products.forEach(product => { %> 
        <a href="/products/<%= product.id %>"><img height="150" width="100" src="<%= product.coverImagePath %>"></a>
        <div class="btn-row">
            <a class="btn btn-primary" href="/products/<%= product.id %>">View</a>
            <a class="btn btn-primary" href="/products/<%= product.id %>/edit">Edit</a>
            <%- include('../partials/deleteForm', { url: `/products/${product.id}` }) %>
        </div>
    <% }); %> 
</div>