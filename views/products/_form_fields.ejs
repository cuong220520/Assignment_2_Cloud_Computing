<div class="form-row">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= product.name %>">
    </div>

    <div class="form-item">
        <label>Brand</label>
        <input type="text" name="brand" value="<%= product.brand %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item">
        <label>Stock</label>
        <input type="number" name="stock" min="0" value="<%= product.stock %>">
    </div>

    <div class="form-item">
        <label>Publish Date</label>
        <input type="date" name="publishDate" value="<%= product.publishDate == null ? '' : product.publishDate.toISOString().split('T')[0] %>">
    </div>
</div>

<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Cover</label>
        <input type="file" name="cover" class="product-cover filepond">
    </div>

    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= product.description %> </textarea>
    </div>
</div>
